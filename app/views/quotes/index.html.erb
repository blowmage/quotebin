<h1>Listing quotes</h1>

<table>
  <tr>
    <th>Quotation</th>
    <th>Tags</th>
    <th>Author</th>
    <th>Source</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @quotes.each do |quote| %>
  <tr>
    <td><%= markdown(quote.quotation) %></td>
    <td><%= show_tag_list(quote) %></td>
    <td><%= quote.author %></td>
    <td><%= quote.source %></td>
    <td><%= quote.url %></td>
    <td><%= link_to 'Show', quote %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

