<% if current_user.present? %>
  <div class="button-bar fr">
    <% if current_user == quote.owner %>
      <%= link_to edit_quote_path(quote), class: "button button_square button_quote-tile button_quote-tile-edit" do %>
        <i class="icon icon_edit_white icon_no-text"></i>
      <% end %>
    <% end %>
    <%= link_to tweet_quote_url(quote),
                data: { popup: true }, class: "button button_square button_quote-tile button_quote-tile-share" do %>
      <i class="icon icon_tweet_white icon_no-text"></i>
    <% end %>
    <%= link_to like_username_quote_path(quote.owner.username, quote.id),
                data: { social_like: quote.id },
                method: :post, remote: true, class: "button button_square button_quote-tile button_quote-tile-like#{current_user.likes?(quote) ? ' state_active' : ''}" do %>
      <i class="icon icon_like_white icon_no-text"></i>
    <% end %>
  </div>
<% else %>
  <%= link_to tweet_quote_url(quote),
              data: { popup: true }, class: "button button_square button_quote-tile fr button_quote-tile-share" do %>
    <i class="icon icon_tweet_white icon_no-text"></i>
  <% end %>
<% end %>
