<article class="quote-tile">
  <div class="quote-tile__body">
    <div class="quote-tile__actions">
      <%= quote_button_bar quote %>
    </div>
    <% if quote.tags.count > 0 %>
    <header class="quote-tile__header">
      <span>On</span>
      <%= tag_list quote %>
    </header>
    <% end %>
    <a href="<%= account_quote_path(quote.owner.username, quote) %>" class="quote-tile__title">
      <%= markdown(truncate(quote.quotation, :length => 400))-%>
    </a>
    <footer class="quote-tile__footer">
      <a href="#" class="quote-tile__author"><%= quote.author %></a>
      <a href="#" class="quote-tile__source"><%= quote.source %></a>
    </footer>
  </div>
</article>
