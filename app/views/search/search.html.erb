<header class="page__title">
  <%= pluralize(results.total_count, 'Result') %> for "<%= query %>" 
</header>
<section class="page__main__tabs nav-bar nav-bar_main-tabs">
  <ul class="nav">
    <li class="nav__item">
      <a class="nav__link" href="#">Relevancy</a>
    </li>
    <li class="nav__item">
      <a class="nav__link b" href="#">Likes</a>
    </li>
    <li class="nav__item">
      <a class="nav__link" href="#">Recency</a>
    </li>
  </ul>
</section>

<section class="page__main__body page__main__body_columns c">

  <div id="results">
    <% results.each do |quote| %>
      <%= quote_tile quote %>
    <% end %>
  </div>

</section>

<section class="page__main__pagination c">
  <div id="paginator">
    <%= paginate results, remote: true %>
  </div>
</section>
